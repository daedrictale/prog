#include <iostream>
#include <cmath>

using namespace std;

double pov(double t[], int i, int j)
{
	return sqrt(pow(t[2 * i] - t[2 * j],2) + pow(t[2 * i + 1] - t[2 * j + 1],2));
}

double p(double t[], int n, int &a, int &b)
{
	a = 0;
	b = 1;
	for (int i = 0; i < n; i++)
	{
		for (int j = i + 1; j < n; j++)
		{
			if (pov(t, j, i) < pov(t, a, b))
			{
				a = i;
				b = j;
			}
		}
	}
	return pov(t, a, b);
}

int main()
{
	int n;
	cin >> n;
	double  *t = new double[2 * n];
	for (int i = 0; i < n; i++)
		cin >> t[2 * i] >> t[2 * i + 1];

	int a, b;
	double mp = p(t, n, a, b);

	cout << endl;
	cout << t[2 * a] << " " << t[2 * a + 1] << " ";
	cout << t[2 * b] << " " << t[2 * b + 1] << " ";
	cout << mp << endl;

	system("pause");
}
